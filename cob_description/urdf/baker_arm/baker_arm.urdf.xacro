<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find cob_description)/urdf/common.xacro" />
  <xacro:include filename="$(find cob_description)/urdf/baker_arm/baker.transmission.xacro" />
  <xacro:include filename="$(find cob_description)/urdf/baker_arm/baker.gazebo.xacro" />

  <xacro:macro name="baker_robot" params="prefix">

    <link name="${prefix}base_link">
      <xacro:cylinder_inertial radius="0.056" length="0.12" mass="2.0">
        <origin xyz="0 0 ${0.12/2}" rpy="0 0 0" />
      </xacro:cylinder_inertial>
      <visual>
        <origin xyz="0 0 0.8" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.1 1.6"/>
        </geometry>
        <material name="grey"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://cob_description/meshes/baker_arm/Flange_red.stl" />
        </geometry>
      </collision>
    </link>
    
    <joint name="${prefix}prismatic_joint" type="prismatic">
      <limit effort="500" velocity="1050" lower="0" upper="4500" />
      <parent link="${prefix}base_link"/>
      <child link="${prefix}prismatic_link"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
    </joint>

    <link name="${prefix}prismatic_link">
      <xacro:cylinder_inertial radius="0.056" length="0.12" mass="2.0">
        <origin xyz="0 0 ${0.12/2}" rpy="0 0 0" />
      </xacro:cylinder_inertial>
      <visual>
        <origin xyz="0.015 0 0.05" rpy="0 0 0"/>
        <geometry>
          <box size="0.01 0.1 0.1"/>
        </geometry>
        <material name="blue"/>
      </visual>
    </link>
    	
    <xacro:baker_arm_transmission prefix="${prefix}" />
    <xacro:baker_arm_gazebo prefix="${prefix}" />

  </xacro:macro>

  <xacro:macro name="baker" params="parent name *origin">

    <!-- mount the arm to the robot -->
    <joint name="${name}_base_joint" type="fixed" >
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="${name}_base_link" />
    </joint>

    <!-- include baker robot -->
    <xacro:baker_robot prefix="${name}_"/>

    <!-- ros_control plugin -->
    <gazebo>
      <plugin name="ros_control" filename="libhwi_switch_gazebo_ros_control.so">
        <robotNamespace>${name}</robotNamespace>
        <filterJointsParam>joint_names</filterJointsParam>
      </plugin>
    </gazebo>

  </xacro:macro>

</robot>
